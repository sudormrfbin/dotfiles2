[push]
	default = simple

[core]
    editor = hx
    pager = delta

[alias]
	unstage = reset --
	; fixup = commit --amend --no-edit
	stash-all = stash push --no-keep-index --include-untracked --all
	stash-temp = stash push --no-keep-index --include-untracked --all -m temp

[interactive]
	singleKey = true
    diffFilter = delta

[include]
	path = "/home/gokul/.config/git/catppuccin.gitconfig"

[delta]
	hyperlinks = true
	features = catppuccin-mocha

[diff]
	colorMoved = default

[pager]
	blame = delta
