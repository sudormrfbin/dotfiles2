{

    "breadcrumbs.enabled": true,

    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontSize": 20.5,
    "editor.fontFamily": "mononoki Nerd Font Mono",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.snippetSuggestions": "bottom",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.rulers": [
        79,
        85
    ],
    "editor.suggest.localityBonus": true,

    "explorer.confirmDragAndDrop": false,

    "extensions.ignoreRecommendations": false,
    "files.autoSaveDelay": 500,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/.vscode": true,
        "**/*.pyc": true,
        "**/*.sublime*": true,
        "**/CVS": true,
        "**/.idea": true,
        "**/.venv": true,
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "metaGo.decoration.width": 14,
    "metaGo.decoration.height": 18,
    "metaGo.decoration.fontSize": 17,
    "metaGo.decoration.fontFamily": "monospace",
    "metaGo.decoration.backgroundOpacity": "0.9",
    "metaGo.decoration.backgroundColor": "white,yellow",
    "metaGo.bookmark.saveBookmarksInProject": true,

    "python.autoComplete.addBrackets": true,
    "python.testing.pytestEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintCategorySeverity.refactor": "Information",
    "python.linting.pylintCategorySeverity.convention": "Hint",
    "python.jediEnabled": false,

    "vsicons.dontShowNewVersionMessage": true,

    "window.titleBarStyle": "native",

    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.commandPalette.preserveInput": true,

    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,

    "zenMode.hideLineNumbers": true,
    "zenMode.centerLayout": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "terminal.integrated.rendererType": "dom",
    "telemetry.enableTelemetry": false,
    "rust-client.rustupPath": "~/.cargo/bin/rustup",
    "rust-client.updateOnStartup": true,
    "rust-client.engine": "rust-analyzer",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/vscode.init.vim",
    "editor.cursorBlinking": "solid",
    "explorer.confirmDelete": false,
    "zenMode.fullScreen": false,
    "zenMode.hideStatusBar": false,
    "window.menuBarVisibility": "toggle",
    "terminal.external.linuxExec": "alacritty",
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "python.analysis.completeFunctionParens": true,
    "python.showStartPage": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "editor.parameterHints.enabled": false,
    "python.analysis.typeCheckingMode": "basic",
    "tabnine.experimentalAutoImports": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.useImportHeuristic": true,
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "files.autoSave": "afterDelay",
    "Lua.workspace.library": [
        "/usr/share/awesome/lib"
    ],
    "Lua.color.mode": "SemanticEnhanced",
//    "rust-analyzer.server.path": "/usr/bin/rust-analyzer",
    "workbench.colorTheme": "Catppuccin Mocha",
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info"
    ],
    "editor.inlayHints.enabled": "off",
    "arduino.useArduinoCli": true,
    "workbench.preferredHighContrastColorTheme": "Default High Contrast Light",
    "editor.inlineSuggest.enabled": true,
    "dart.flutterHotReloadOnSave": "allIfDirty",
    "window.zoomLevel": 1,
    "workbench.sideBar.location": "right",
    "redhat.telemetry.enabled": false,
    "editor.renderWhitespace": "trailing",
}
