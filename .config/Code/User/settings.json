{
    "atomKeymap.promptV3Features": true,

    "bookmarks.saveBookmarksInProject": true,

    "breadcrumbs.enabled": true,

    "bracket-pair-colorizer-2.colors": [
        "Gold",
        "Orchid",
        "LightSkyBlue",
    ],

    "editor.multiCursorModifier": "ctrlCmd",
    "editor.fontSize": 19.5,
    "editor.fontFamily": "mononoki Nerd Font Mono",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.find.autoFindInSelection": "multiline",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.snippetSuggestions": "bottom",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.rulers": [79, 85],
    "editor.renderWhitespace": "selection",
    "editor.suggest.localityBonus": true,

    "explorer.confirmDragAndDrop": false,

    "extensions.ignoreRecommendations": false,

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.pytest_cache": true,
        "**/.svn": true,
        "**/.vscode": true,
        "**/*.pyc": true,
        "**/*.sublime*": true,
        "**/CVS": true,
        "**/.idea": true,
        "**/.venv": true,
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "metaGo.decoration.width": 14,
    "metaGo.decoration.height": 18,
    "metaGo.decoration.fontSize": 17,
    "metaGo.decoration.fontFamily": "monospace",
    "metaGo.decoration.backgroundOpacity": "0.9",
    "metaGo.decoration.backgroundColor": "white,yellow",
    "metaGo.bookmark.saveBookmarksInProject": true,

    "python.autoComplete.addBrackets": true,
    "python.testing.pytestEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintCategorySeverity.refactor": "Information",
    "python.linting.pylintCategorySeverity.convention": "Hint",
    "python.jediEnabled": false,

    "vsicons.dontShowNewVersionMessage": true,

    "window.titleBarStyle": "native",

    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.commandPalette.preserveInput": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#007ACC",
        "statusBar.foreground": "#FFFFFF",
        "statusBarItem.hoverBackground": "#4997eb",
        "editor.background": "#161821ec",
        "editor.lineHighlightBackground": "#101119be",
        "editorHoverWidget.background": "#111111",
    },
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,

    "zenMode.hideLineNumbers": true,
    "zenMode.centerLayout": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "terminal.integrated.rendererType": "dom",
    "telemetry.enableTelemetry": false,
    "workbench.colorTheme": "One Dark Pro",
    "rust-client.rustupPath": "~/.cargo/bin/rustup",
    "rust-client.updateOnStartup": true,
    "rust-client.engine": "rust-analyzer",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/vscode.init.vim",
    "editor.cursorBlinking": "solid",
    "explorer.confirmDelete": false,
    "zenMode.fullScreen": false,
    "zenMode.hideStatusBar": false,
    "window.menuBarVisibility": "toggle",
    "rust-analyzer.updates.channel": "nightly",
    "terminal.external.linuxExec": "alacritty",
    "python.languageServer": "Microsoft",
    "workbench.editorAssociations": [],
    "python.analysis.completeFunctionParens": true,
    "python.showStartPage": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "editor.parameterHints.enabled": false,
    "python.analysis.typeCheckingMode": "strict",
    "tabnine.experimentalAutoImports": true,
    "python.analysis.diagnosticMode": "workspace",
}
